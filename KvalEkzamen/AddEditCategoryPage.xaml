<Page x:Class="KvalEkzamen.AddEditCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KvalEkzamen"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditCategoryPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="143*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="225*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="239*"/>
            <ColumnDefinition Width="315*"/>
            <ColumnDefinition Width="246*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="CategoryInput" Grid.Row="1" Grid.Column="1" FontSize="20"/>
        <TextBlock Text="Название категории" Grid.Row="1" Grid.Column="0" FontSize="20"/>
        <Button Click="AddEdit" Content="Создать/редактировать" Grid.Column="1" Grid.Row="2"/>
    </Grid>
</Page>
