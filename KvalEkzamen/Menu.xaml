<Page x:Class="KvalEkzamen.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KvalEkzamen"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="110*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="110*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="223*"/>
            <ColumnDefinition Width="342*"/>
            <ColumnDefinition Width="235*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Grid.Row="1" Content="База товаров" FontSize="20" Click="OpenItemsPage"/>
        <Button Grid.Column="1" Grid.Row="2" Content="База категорий" FontSize="20" Click="OpenCategoryPage"/>
        <Button Grid.Column="1" Grid.Row="3" Content="База остатков" FontSize="20" Click="OpenRemainsPage"/>
    </Grid>
</Page>
